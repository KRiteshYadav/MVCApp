@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model FriendApp.Models.Friend



<body style="float: left; width: 280px; background-color:lightblue;">
    <fieldset>
        <h1>Delete a Friend Record</h1>

        <form asp-action="Delete" asp-controller="Friend">

            <div asp-validation-summary="ModelOnly" class="input-validation-error"></div>


            <p>
                <b> <label asp-for="FriendId"></label></b>
                <input asp-for="FriendId" class="form-control" placeholder="" />
                <span asp-validation-for="FriendId"></span>
            </p>

            <p>
                <button type="submit">Delete</button>
            </p>

        </form>

    </fieldset>
</body>
